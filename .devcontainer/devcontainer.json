{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--add-host=host.docker.internal:host-gateway"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "cloudflare.cloudflare-workers-bindings-extension",
        "qwtel.sqlite-viewer",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        },
        "telemetry.telemetryLevel": "off",
        "claude-code.terminalEnvironment": false
      }
    }
  },
  "unwantedExtensions": ["Anthropic.claude-code"],
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory,target=/commandhistory,type=volume",
    "source=claude-code-conversations,target=/home/node/.claude/projects,type=volume",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "LANGFUSE_HOST": "http://host.docker.internal:3052",
    "MCP_GATEWAY_URL": "http://host.docker.internal:8811"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "bash .devcontainer/lifecycle-wrapper.sh postStart 'sudo /usr/local/bin/init-firewall.sh && git config --global --add safe.directory /workspace && git config --global --add safe.directory \"*\" && git config --global core.autocrlf input && bash .devcontainer/setup-network-checks.sh && bash .devcontainer/init-gsd.sh && mcp-setup'",
  "postCreateCommand": "bash .devcontainer/lifecycle-wrapper.sh postCreate 'bash .devcontainer/setup-container.sh && bash .devcontainer/install-agent-config.sh'",
  "waitFor": "postStartCommand",
  "forwardPorts": [3000, 8787],
  "portsAttributes": {
    "3000": { "label": "Dev App", "onAutoForward": "silent" },
    "8787": { "label": "Dev App 2", "onAutoForward": "silent" }
  }
}
