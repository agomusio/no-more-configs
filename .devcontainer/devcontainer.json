{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "cloudflare.cloudflare-workers-bindings-extension",
        "qwtel.sqlite-viewer",
        "bradlc.vscode-tailwindcss",
        "cloudflare.cloudflare-workers-bindings-extension"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=${localEnv:USERPROFILE}/.claude,target=/home/node/.claude,type=bind"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh && git config --global --add safe.directory /workspace && git config --global --add safe.directory /workspace/gitprojects/adventure-alerts && git config --global --add safe.directory /workspace/gitprojects/claude-aimtrainer && git config --global core.autocrlf input",
  "waitFor": "postStartCommand",
  "forwardPorts": [3000, 8787],
  "portsAttributes": {
    "3000": {
      "label": "Dev App",
      "onAutoForward": "silent"
    },
    "8787": {
      "label": "Dev App 2",
      "onAutoForward": "silent"
    }
  }
}
